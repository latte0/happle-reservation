# Happle Reservation System - Environment Variables
# Copy this file to .env and fill in the values

# ==================== Backend ====================
# Flask
FLASK_ENV=development
PORT=5000

# hacomono API
HACOMONO_BRAND_CODE=happle
HACOMONO_ADMIN_DOMAIN=happle-admin.hacomono.jp
HACOMONO_ACCESS_TOKEN=your_access_token_here
HACOMONO_REFRESH_TOKEN=your_refresh_token_here
HACOMONO_CLIENT_ID=your_client_id_here
HACOMONO_CLIENT_SECRET=your_client_secret_here

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Slack通知
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack App認証情報（将来の拡張用）
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_VERIFICATION_TOKEN=your_slack_verification_token_here

# ==================== Frontend ====================
# API URL
NEXT_PUBLIC_API_URL=http://localhost:5000
